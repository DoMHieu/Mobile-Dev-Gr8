<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/Toolbar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/music_note_24px"
            tools:title="Tên bài hát"
            tools:subtitle="Tên nghệ sĩ" />

        <!-- Cover + Queue (thay thế nhau) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Ảnh bìa -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <!-- Queue (ẩn mặc định) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQueue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@android:color/darker_gray"
                android:padding="8dp"/>
        </FrameLayout>

        <!-- Progress bar + thời gian -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/songCurrentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:gravity="center"
                android:singleLine="true"
                tools:text="0:00"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/progressSlider"
                app:layout_constraintBottom_toBottomOf="@id/progressSlider"
                app:layout_constraintEnd_toStartOf="@id/progressSlider"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/progressSlider"
                style="@style/Widget.Material3.Slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="2dp"
                app:layout_constraintStart_toEndOf="@id/songCurrentProgress"
                app:layout_constraintEnd_toStartOf="@id/songTotalTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/songTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:gravity="center"
                android:singleLine="true"
                tools:text="3:45"
                app:layout_constraintStart_toEndOf="@id/progressSlider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/progressSlider"
                app:layout_constraintBottom_toBottomOf="@id/progressSlider"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Các nút điều khiển -->
        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="5"
            android:useDefaultMargins="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/repeatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/repeat" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/skip_previous_24px" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/playPauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/play"
                android:backgroundTint="#CCCCFF" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/skip_next_24px" />

            <!-- Nút toggle queue -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/playlist_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="16dp"
                app:srcCompat="@drawable/playlist_play" />
        </GridLayout>
    </LinearLayout>
</FrameLayout>
